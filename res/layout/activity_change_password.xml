<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePasswordActivity"
    android:background="@android:color/background_dark" >
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/topnav"
        android:orientation="horizontal"
        android:padding="5dp"
        android:id="@+id/topnav" >
        <ImageButton
             android:id="@+id/clear_btn"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true"
             android:background="@null"
             android:src="@drawable/buttonback"
             android:contentDescription="@string/clear_btn" /> 
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"   
            android:layout_centerInParent="true"         
            android:text="@string/change_password"
            android:textColor="@android:color/white" />                
    </RelativeLayout>
    <LinearLayout
                android:id="@+id/basics_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/topnav"
                android:background="@drawable/loginbg"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" 
                android:paddingTop="30dp">
        	<EditText 
        	    android:id="@+id/current_password"
        	    android:layout_width="fill_parent"
        	    android:layout_height="wrap_content"
        	    android:hint="CURRENT PASSWORD"
        	    android:layout_marginTop="10dp"
        	    android:padding="10dp"
        	    android:inputType="textPassword"
        	    android:background="@drawable/round_corner_gray"/>
        	<EditText 
        	    android:id="@+id/new_password"
        	    android:layout_width="fill_parent"
        	    android:layout_height="wrap_content"
        	    android:hint="NEW PASSWORD"
        	    android:layout_marginTop="10dp"
        	    android:padding="10dp"
        	    android:inputType="textPassword"
        	    android:background="@drawable/round_corner_gray"/>
        	<EditText 
        	    android:id="@+id/confirm_password"
        	    android:layout_width="fill_parent"
        	    android:layout_height="wrap_content"
        	    android:hint="CONFIRM PASSWORD"
        	    android:layout_marginTop="10dp"
        	    android:padding="10dp"
        	    android:inputType="textPassword"
        	    android:background="@drawable/round_corner_gray"/>
        	<Button 
        	    android:id="@+id/submit_btn"
        	    android:layout_width="fill_parent"
        	    android:layout_height="40dp"
        	    android:text="@string/submit"
        	    android:textColor="@android:color/white"
        	    android:layout_marginTop="30dp"
        	    android:background="@drawable/btnsubmit"/>
        </LinearLayout>
</RelativeLayout>