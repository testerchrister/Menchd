<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GaydarNearByActivity" >
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/result_count_container">
</LinearLayout >
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/result_count_container"
    android:paddingTop="40dp"
    android:orientation="vertical" >
    <TextView 
        android:id="@+id/result_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/list_count"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:background="@color/profile_light_gray"/>
    <ListView 
    android:id="@+id/list_view" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">           
</ListView>
</LinearLayout>

</RelativeLayout>