<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:staggered="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:id="@+id/main_outer"   >

<LinearLayout
    android:id="@+id/menu_layout" 
    android:orientation="vertical" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:visibility="gone">
       <ScrollView 
           android:layout_height="wrap_content"
           android:layout_width="wrap_content">
    
           <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/dashboard">
            
               <ImageView
                   android:id="@+id/profile"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center|center_horizontal"
                   android:layout_marginTop="20dp"
                   android:src="@drawable/dashprofile"
                   android:onClick="visit_profile"
                   android:contentDescription="my_profile"
                   />
                <ImageView
                   
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center|center_horizontal"
                   android:layout_margin="5dp"
                   android:src="@drawable/dashsep"
                   />
                <RelativeLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal">
                    <ImageView
	                   android:id="@+id/message"
	                   android:layout_width="wrap_content"
	                   android:layout_height="wrap_content"
	                   android:src="@drawable/dashmessage"
	                   android:onClick="message_inbox"/>

                   <TextView
                       android:id="@+id/msg_cnt"
                       android:layout_width="wrap_content"
                       android:layout_height="13dp"
                       android:layout_alignParentTop="true"
                       android:background="@drawable/chat_bubble"
                       android:layout_gravity="center"
                       android:paddingLeft="2dp"
                       android:paddingRight="2dp"
                       android:paddingBottom="2dp"
                       android:textSize="10sp"
                       android:textColor="@android:color/white" />

                </RelativeLayout>
                   <ImageView
                 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center|center_horizontal"
                   android:layout_margin="5dp"
                   android:src="@drawable/dashsep"
                   />   
                   <ImageView
                   android:id="@+id/dashfav"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center|center_horizontal"
                   android:src="@drawable/dashfav_active"
                   />
                   <ImageView
                  
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center|center_horizontal"
                   android:layout_margin="5dp"
                   android:src="@drawable/dashsep"
                   /> 
                                 <ImageView
                   android:id="@+id/dashgaydar"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center|center_horizontal"
                   android:src="@drawable/dashgaydar_active"
                   />
                   <ImageView
                  
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center|center_horizontal"
                   android:layout_margin="5dp"
                   android:src="@drawable/dashsep"
                   />
                  <ImageView
                   android:id="@+id/dashmeetme"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center|center_horizontal"
                   android:src="@drawable/dashmeetme_active"
                   />
                   <ImageView
                  
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center|center_horizontal"
                   android:layout_margin="5dp"
                   android:src="@drawable/dashsep"
                   />
                  <ImageView
                   android:id="@+id/dashhotspot"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center|center_horizontal"
                   android:src="@drawable/dashhotspot_active"
                   />
                   <ImageView
                  
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center|center_horizontal"
                   android:layout_margin="5dp"
                   android:src="@drawable/dashsep"
                   />  
                  <ImageView
                   android:id="@+id/dashevents"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center|center_horizontal"
                   android:src="@drawable/dashevents_active"
                   />
                   <ImageView
                  
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center|center_horizontal"
                   android:layout_margin="5dp"
                   android:src="@drawable/dashsep"
                   /> 
                  <ImageView
                   android:id="@+id/dashsetting"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center|center_horizontal"
                   android:src="@drawable/dashsetting_active"
                   />
                   <ImageView
                  
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center|center_horizontal"
                   android:layout_margin="5dp"
                   android:src="@drawable/dashsep"
                   />
                  <ImageView
                   android:id="@+id/logout"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center|center_horizontal"
                   android:onClick="logout_process"
                   android:src="@drawable/icon_logout"
                   android:background="@drawable/button_on_press"
                   />
                   <ImageView
                  
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center|center_horizontal"
                   android:layout_margin="5dp"
                   android:src="@drawable/dashsep"
                   />                                                                                                                                                  
           </LinearLayout>
    </ScrollView>
    
    
    
       
       </LinearLayout>


<LinearLayout
    android:id="@+id/List_layout" 
    android:orientation="vertical" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black">



<LinearLayout 
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
       >
       

<RelativeLayout
   		android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/topnav"
        android:orientation="horizontal"
        android:padding="5dp"
        android:id="@+id/topnav" >
<RelativeLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
	android:layout_gravity="center">
    <ImageView
        android:id="@+id/dash_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/buttonnav"
        android:onClick="toggleMenu" />
    <TextView
       android:id="@+id/msg_cnt_menu"
       android:layout_width="wrap_content"
       android:layout_height="13dp"
       android:layout_alignParentTop="true"
       android:background="@drawable/chat_bubble"
       android:layout_gravity="center"
       android:paddingLeft="2dp"
       android:paddingRight="2dp"
       android:paddingBottom="2dp"
       android:textSize="10sp"
       android:textColor="@android:color/white" />
</RelativeLayout>
   <TextView 
    android:id="@+id/rec_heading"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"   
    android:layout_centerInParent="true"  
    android:textStyle="bold|italic"
    android:text="@string/recommandation"
    android:textColor="@android:color/white"/>

    <ImageView
        android:id="@+id/change_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right|center_vertical"
        android:src="@drawable/btntotile" />

</RelativeLayout>
<LinearLayout android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">
           <RelativeLayout 
           android:id="@+id/no_rec"
           android:layout_width="fill_parent"
           android:layout_height="20dp"
           >
           <TextView 
               android:id="@+id/no_rec_txt"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerInParent="true"
               android:layout_centerVertical="true"
               android:text="@string/loading_rec"/>
       </RelativeLayout>
