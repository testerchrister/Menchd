<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/chat_popup_gray">
      <RelativeLayout
	      android:id="@+id/inner_bnts"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_alignParentLeft="true"
	      android:layout_margin="3dp">
		    <ImageButton
	          android:id="@+id/attachments"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:background="@null"
	          android:src="@drawable/attach"
	          android:layout_below="@+id/camera" />
  		</RelativeLayout>

            <RelativeLayout
                android:id="@+id/msg_editor"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="3dp"
                android:layout_toLeftOf="@+id/right_btns"
                android:layout_toRightOf="@+id/inner_bnts"
                android:background="@android:color/white" >

                <EditText
                    android:id="@+id/message_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/inner_bnts"
                    android:background="@null"
                    android:padding="5dp"
                    android:layout_margin="5dp">

                    <requestFocus />
                </EditText>

                <ImageButton
                    android:id="@+id/btnsend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:src="@drawable/sendarrow" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/right_btns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="3dp">
                <ImageButton 
                    android:id="@+id/custom_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/megtemplate"
                    android:background="@null" />
            </RelativeLayout>
        </RelativeLayout>