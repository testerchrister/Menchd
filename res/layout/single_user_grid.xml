<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="7" >
<!-- <ImageView
    android:id="@+id/rec_user_image"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:adjustViewBounds="true" 
    android:background="@android:color/darker_gray"
    android:layout_weight="5"/> -->
<com.newagesmb.staggeredgridviewdemo.views.ScaleImageView
        android:id="@+id/rec_user_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@null" />
<LinearLayout android:orientation="horizontal" 
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="@drawable/recomendbtm"
    android:layout_weight="2"
    android:weightSum="1.0">
    <ImageView 
        android:id="@+id/del_rec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/remove60"
        android:layout_weight=".3"
        android:layout_gravity="left|center_vertical"
        />
   <TextView 
    android:id="@+id/rec_percentage"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center|center_vertical"
    android:layout_weight=".4"
    android:gravity="center|center_horizontal"
    android:textStyle="bold|italic"
    />
    <ImageView 
        android:id="@+id/request_rec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/addfav_gray60"
        android:layout_weight=".3"
        android:layout_gravity="right|center_vertical"/>
</LinearLayout>
</LinearLayout>
